%%%%%%%%%%%%%%%%
% Block colors %
%%%%%%%%%%%%%%%%

%Equivalent to \theoremstyle{plain}. Use for: theorem, proposition, lemma, corollary, conjecture, algorithm, axiom, criterion, etc.
\setbeamercolor*{block title alerted}{use=alerted text,fg=white,bg=alerted text.fg}
\setbeamercolor*{block body alerted}{parent=block text}

%Equivalent to \theoremstyle{definition}. Use for: definition, condition, exercise, notation, question, problem, solution, etc.
\setbeamercolor*{block title}{use=comment text,fg=white,bg=comment text.fg}
\setbeamercolor*{block body}{parent=block text}

%Equivalent to \theoremstyle{remark}. Use for: remark, example, summary, observation, conclusion, acknowledgment, claim, case, etc.
\setbeamercolor*{block title example}{use=example text, fg=white, bg=example text.fg}
\setbeamercolor*{block body example}{parent=block text}



